<Page x:Class="ClientWPF.Pages.DirectoryPage.DirectoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientWPF.Pages.DirectoryPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DirectoryPage">

    <Grid>
        <Grid VerticalAlignment="Top" Margin="10,10,10,0" Background="#20000000">

            <Border CornerRadius="5" Background="#FF007ACC" Margin="10,5,0,5" Height="35" Width="120" HorizontalAlignment="Left">
                <Button x:Name="downloadBtn" Content="Загрузить"
                FontSize="14" 
                Background= "Transparent"
                Foreground="White" 
                BorderThickness="0"
                Click="Download"
                Cursor="Hand"/>
            </Border>
        </Grid>
        <Grid Margin="10,78,10,10" Background="#20000000">
            <ScrollViewer >
                <StackPanel x:Name="stackPanelDirectories" Orientation="Vertical"></StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
