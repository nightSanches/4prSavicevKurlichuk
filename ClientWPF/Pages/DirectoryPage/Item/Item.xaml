<UserControl x:Class="ClientWPF.Pages.DirectoryPage.Item.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientWPF.Pages.DirectoryPage.Item"
             mc:Ignorable="d" 
             MouseDoubleClick="ucMouseDoubleClick" MouseEnter="ucMouseEnter" MouseLeave="ucMouseLeave">

    <Border x:Name="border" Margin="5" Padding="10" Background="#99000000" CornerRadius="5">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="imgIcon" Width="20" Height="20" Margin="0,0,5,0" />
            <TextBlock x:Name="txtDirectory" FontSize="16" Foreground="White" />
        </StackPanel>
    </Border>
</UserControl>
